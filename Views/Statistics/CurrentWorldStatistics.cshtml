<div class="modal fade" tabindex="-1" id="WorldStats" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h4 class="modal-title" style="text-align: center;">Current World Statistics</h4>
            <br />
            <table class="table table-striped table-bordered table-sm" id="WorldStatsTable">
                <thead>
                    <tr>
                        <th class="th-sm">Country</th>
                        <th class="th-sm">Positive Cases</th>
                        <th class="th-sm">Total Recoveries</th>
                        <th class="th-sm">Total Deaths</th>
                        <th class="th-sm">New Deaths</th>
                        <th class="th-sm">New Recoveries</th>
                        <th class="th-sm">New Cases</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.listOfCountries)
                    {
                        <tr>
                            <th scope="row">@item.CountryName</th>
                            <td>@item.TotalConfirmed</td>
                            <td>@item.TotalRecovered</td>
                            <td>@item.TotalDeaths</td>
                            <td>@item.NewDeaths</td>
                            <td>@item.NewRecovered</td>
                            <td>@item.NewConfirmed</td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

