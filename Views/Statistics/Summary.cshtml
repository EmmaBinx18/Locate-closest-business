@model Locate_closest_business.Models.SummaryModel

@{
    ViewData["Title"] = "Global Summary";
}

<h2>@ViewData["Title"]</h2>
<hr />


    <h1 class="display-4">Statistic Summary</h1>
    <div>
    <dl class="dl-horizontal">
        <dt>
            Global
        </dt>
        <dd>
            @Html.DisplayNameFor(model => model.Global.NewConfirmed) @Html.DisplayFor(model => @model.Global.NewConfirmed)<br>
            @Html.DisplayNameFor(model => model.Global.TotalConfirmed) @Html.DisplayFor(model => model.Global.TotalConfirmed)<br>
            @Html.DisplayNameFor(model => model.Global.NewDeaths) @Html.DisplayFor(model => model.Global.NewDeaths)<br>
            @Html.DisplayNameFor(model => model.Global.TotalDeaths) @Html.DisplayFor(model => model.Global.TotalDeaths)<br>
            @Html.DisplayNameFor(model => model.Global.NewRecovered) @Html.DisplayFor(model => model.Global.NewRecovered)<br>
            @Html.DisplayNameFor(model => model.Global.TotalRecovered) @Html.DisplayFor(model => model.Global.TotalRecovered)<br>
        </dd>
        <dt>
            Countries
        </dt>
        @foreach (CountriesModel item in Model.Countries)
        {
            <dd>@item.Country</dd>
            <dd style="text-indent:50px">New Confirmed @item.NewConfirmed</dd>
            <dd style="text-indent:50px">Total Confirmed  @item.TotalConfirmed</dd>
            <dd style="text-indent:50px">New Deaths @item.NewDeaths</dd>
            <dd style="text-indent:50px">Total Deaths  @item.TotalDeaths</dd>
            <dd style="text-indent:50px">New Recovered  @item.NewRecovered</dd>
            <dd style="text-indent:50px">Total Recovered  @item.TotalRecovered</dd>
            <dd style="text-indent:50px">Date Recorded  @item.Date</dd>
            <br>
        }
    </dl>
</div>